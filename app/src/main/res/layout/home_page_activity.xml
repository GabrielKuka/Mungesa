<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.HomePage">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/absence_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:elevation="10dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:text="@string/absences"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bulk_sms_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="?android:attr/selectableItemBackground"
        android:paddingHorizontal="10dp"
        android:paddingVertical="15dp"
        android:text="@string/bulk"
        app:layout_constraintEnd_toEndOf="@+id/absence_button"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="@+id/absence_button"
        app:layout_constraintTop_toBottomOf="@+id/absence_button" />

</androidx.constraintlayout.widget.ConstraintLayout>

